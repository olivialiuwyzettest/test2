# Core App
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wyze_rto?schema=public
APP_SHARED_ACCESS_CODE=replace-me
APP_ALLOWED_EMAIL_DOMAINS=wyze.com
APP_SESSION_SECRET=replace-with-32-char-secret
APP_DEFAULT_TIMEZONE=America/Los_Angeles

# Optional cron protection (used by /api/cron/sync)
APP_CRON_SECRET=

# Brivo mode
# mock = generates deterministic sample events
# live = uses real Brivo OAuth + API calls
BRIVO_MODE=mock

# Brivo live API config
BRIVO_AUTH_URL=https://auth.brivo.com/oauth/token
BRIVO_API_BASE_URL=https://api.brivo.com/v1/api
BRIVO_API_KEY_HEADER=api-key
BRIVO_API_KEY=
BRIVO_CLIENT_ID=
BRIVO_CLIENT_SECRET=
# Optional password grant credentials (if required by tenant)
BRIVO_USERNAME=
BRIVO_PASSWORD=

# Webhook mode / security
BRIVO_WEBHOOK_MODE=false
BRIVO_WEBHOOK_SECRET=

# Attendance qualification
# Any matching marker in eventType/securityAction counts as entry if door countsForEntry=true
BRIVO_ENTRY_EVENT_MARKERS=OPEN,ACCESS_GRANTED,DOOR_OPEN,ACCESS-ALLOWED

# Optional auto-linking: if true, attempts to map Brivo users by exact email match
BRIVO_AUTO_LINK_BY_EMAIL=false
