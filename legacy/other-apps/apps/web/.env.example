DATABASE_URL="file:./dev.db"

# Provider: "mock" (no keys) or "amadeus" (requires keys below)
FLIGHT_PROVIDER="mock"

# Daily scan scheduler (worker)
SCAN_TIMEZONE="America/Los_Angeles"
SCAN_CRON="0 6 * * *"
RUN_SCAN_ON_STARTUP="false"

# Passenger group (defaults: 4 adults + 2 children)
PASSENGERS_ADULTS="4"
PASSENGERS_CHILDREN="2"
PASSENGERS_CHILD_AGES="8,10"

# Trip search windows (defaults match the prompt)
DEPART_START="2026-12-10"
DEPART_END="2026-12-20"
RETURN_START="2027-01-01"
RETURN_END="2027-01-07"
TRIP_MIN_NIGHTS="7"
TRIP_MAX_NIGHTS="21"

# Origins/destinations
ORIGINS="SEA,YVR"
# Optional: comma-separated whitelist to limit destinations, e.g. "HND,ICN,SIN"
DESTINATIONS_INCLUDE=""
# Optional: cap the Asia airport dataset size
DESTINATIONS_LIMIT="50"

# Connection rules
MAX_STOPS_TOTAL="1"
OVERNIGHT_MIN_HOURS="8"

# Scanner performance / quota protection
SCAN_MAX_COMBOS="250"
SCAN_MAX_OFFERS_PER_QUERY="20"
SCAN_CONCURRENCY="2"

# Amadeus Self-Service API (required if FLIGHT_PROVIDER="amadeus")
AMADEUS_HOST="https://test.api.amadeus.com"
AMADEUS_CLIENT_ID=""
AMADEUS_CLIENT_SECRET=""

